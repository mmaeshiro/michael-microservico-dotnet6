@model IEnumerable<Shopping.Web.Models.ProductModel>
<br />
<br />

<div class="container p-4 border">
	<div class="row pb-2">
		<div class="col">
			<h1 class="text-primary">Products List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="ProductCreate" class="btn btn-outline-primary">
				<i class="fa fa-plus"></i> Create New Product
			</a>
		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Category</th>
				<th>Price</th>
			</tr>			
		</thead>
		<tbody>
			@foreach (var p in Model)
			{
				<tr>
					<td>@p.Name</td>
					<td>@p.CategoryName</td>
					<td>@((p.Price).ToString("c"))</td>
					<td>
						<a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@p.Id">
							<i class="fa fa-pencil"></i>							
						</a>
						<a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@p.Id">
							<i class="fa fa-trash"></i>								
						</a>
					</td>					
				</tr>
			}
		</tbody>
	</table>
</div>

